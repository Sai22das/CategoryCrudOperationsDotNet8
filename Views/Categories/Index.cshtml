@model List<Category>

@section title
{
	<h3>Categories</h3>
}
@* <ul>

	@foreach (var Category in Model)
	{
		<li>@Category.Name</li>

	}
		</ul> *@

@if (Model != null && Model.Count > 0)
{
	
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Description</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var category in Model)
			{
				<tr>
					<td>@category.Name</td>
					<td>@category.Description</td>

					@* 	<td><a class="btn btn-link" href="@($"/categories/Edit/{category.CategoryId}")">Edit</a></td>
			<td><a class="btn btn-link" href="@($"/categories/Edit/{category.CategoryId}")">Delete</a></td>*@

					<td>
						<a class="btn btn-link" asp-controller="Categories" asp-action="Edit" asp-route-id="@category.CategoryId">Edit</a>
					</td>
					<td>
						<a class="btn btn-link" asp-controller="Categories" asp-action="Delete" asp-route-id="@category.CategoryId" onclick="return ConfirmDelete()">Delete</a>
					</td>

				@* 	<td>
						<a class="btn btn-link" href="@($"/categories/Delete/{category.CategoryId}")">Delete</a>
					</td> *@
				</tr>
				<input type="hidden" asp-for="@category.CategoryId" />
			}
		</tbody>
	</table>
	<br />

	<a class="btn btn-primary" asp-controller="Categories" asp-action="Add">Add</a>
}

@section Scripts {
	<script>
		function ConfirmDelete() {
			return confirm("Are you sure you want to delete this Category")
		}
	</script>
}